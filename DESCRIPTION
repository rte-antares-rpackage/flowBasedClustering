Package: flowBasedClustering
Type: Package
Title: Cluster 'Flow-Based' Typical Days
Version: 1.1.0
Authors@R: c(
    person("Titouan", "ROBERT", , "titouan.robert@rte-france.com", role = c("aut", "ctb")),
